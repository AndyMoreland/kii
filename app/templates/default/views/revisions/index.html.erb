<% page_title "Revisions for &ldquo;#{@page.title}&rdquo;" %>
<div id="page_meta">
  <%= link_to "Back to page", page_path(@page) %>
</div>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Message</th>
      <th>By</th>
    </tr>
  </thead>
  
  <tbody>
    <% @revisions.each do |revision| %>
      <tr>
        <td><%= revision_link(@page, revision) %></td>
        <td><%= revision.message %></td>
        <td><%= revision_author_stamp(revision) %></td>
      </tr>
    <% end %>
  </tbody>
</table>